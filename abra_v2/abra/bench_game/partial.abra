def mkTree = depth: Int do
  if depth > 0 do
    Node(mkTree(depth - 1), mkTree(depth - 1))
  else
    Node(none, none) ..Node

def checksum = self: Node do
  sum = 1

  when self.left  is l: Node do
    sum = sum + l.checksum() .

  when self.right  is r: Node do
      sum = sum + r.checksum() .

  sum .Int