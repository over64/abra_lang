type Vec3 = (x: Float, y: Float, z: Float)

val classifier =
	match p = getPoint()
		of Vec3(0, 0, 0) -> 'coord center'
		of Vec3(0, y, z) -> 'point on YoZ plain at ($y, $z)'
		of Vec3(x, 0, z) -> 'point on XoZ plain at ($x, $z)'
		of Vec3(x, y, 0) -> 'point on XoY plain at ($x, $y)'
		of Vec3(x, 0, 0) -> 'point on X axis at $x'
		of Vec3(0, y, 0) -> 'point on Y axis at $y'
		of Vec3(0, 0, z) -> 'point on Z axis at $z'
		else 'general point $p'